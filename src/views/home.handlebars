<h1 class="ps-2">All products</h1>
<div class="ps-2">
    <h2>Bienvenido : {{user.first_name}} </h2>
    <p>Email : {{user.email}} </p>
    <p>Rol: {{user.role}} </p>
</div>

<form action="/api/session/logout" method="get">
    <input class="btn btn-light ps-3 " type="submit" value="Logout">
</form>



{{#each products}}
<div class='col-md-3 mx-2 my-3 r'>
    <div class="card w-100 mt-5">
        <div class="card-header bg-info">
            {{this.title}}
        </div>
        <div class="card-body">
            <img src={{this.thumbnail}}alt="Products img" class='card-img'>

            <br />
            Price: â‚¬ {{this.price}}
            <br />
            Stock : {{this.stock}}
        </div>
    </div>
</div>
{{/each}}
